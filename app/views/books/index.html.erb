<h4>Book Review</h4>
<%= form_tag(books_path, method: :get) do %>
  <%= text_field_tag :term %>
  <%= submit_tag 'Search' %>
<% end %>
<%= will_paginate %>
<table>
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% for book in @books %>
        <div class='book'>
            <strong>   <%= link_to book.title, book %> </strong>
        </div>
        <%= link_to 'Show', book_path(book) %>
      <% end %>
     </tr>       
  </tbody>
</table>
<%= will_paginate %>
